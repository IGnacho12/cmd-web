---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>

  /* Fuente Poppins */
  @font-face {
    font-family: "Poppins";
    src: url("../fonts/Poppins-Regular.ttf");
  }

  /* Variables */
  :root {
    --text: #ebe9fc;
    --background: #010104;
    --primary: #3a31d8;
    --secondary: #020024;
    --accent: #0600c2ad;
  }

  /* Estilos globales */
  *::selection {
    background-color: #0600c2ad;
    color: white;
  }

  * {
    color: var(--text);
  }

  body {
    height: 100dvh;
    width: auto;
    background-color: var(--background);
    scrollbar-color: var(--accent) var(--background);
  }

  main {
    margin: auto;
    width: 70%;

    font-family: "Poppins";
    display: flex;
  }

  h1 {
    padding: 4px;
    font-size: 40px;
    font-weight: bold;
    text-align: center;
    text-wrap: balance;
  }

  p {
    padding: 4px 0 4px 0;
    font-size: 18px;
    color: #ebe9fcb9;
    text-wrap: pretty;
    max-width:;
  }

  a.link {
    font-weight: 500;
    position: relative;
    transition: color 0.5s ease-in-out;
  }
  a.link::before {
    content: "";
    height: 40%;
    width: 100%;
    position: absolute;
    background-color: #0600c2ad;
    bottom: 3px;
    z-index: -1;
  }
  a.link:hover {
    color: white;
  }

  a.a-button {
    margin-top: 5px;
    padding: 4px;
    border-radius: 3px;
    background-color: var(--primary);
    transition: all 0.1s ease-in-out;
  }

  a.a-button:hover {
    transform: translate(0, -3px);
    box-shadow: 0 20px 50px -10px var(--primary);
  }

  /* estilo para deaparecer la barra de scroll */
  body::-webkit-scrollbar {
    width: 10px;
    background-color: white;
  }
</style>

