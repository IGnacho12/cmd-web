---
const { title, danger, behavior } = Astro.props;
---

<div 
  class="min-w-[160px] max-w-[160px] overflow-clip flex flex-col p-2 relative transition-all"
>
  <h1 class="mt-3 text-wrap mr-3">{title}</h1>

  <span
    id="danger"
    class="w-fit px-2 rounded-xl select-none absolute right-2 top-1"
    >{danger}</span
  >

  <button id="show-behavior"> Comportamiento â†“ </button>

  <p class="hidden" id="behavior-p">{behavior}</p>
</div>

<style>
  @font-face {
    font-family: "Poppins";
    src: url("../fonts/Poppins-Regular.ttf");
  }

  :root {
    --text: #ebe9fc;
    --background: #010104;
    --primary: #3a31d8;
    --secondary: #020024;
    --accent: #0600c2ad;
  }

  *::selection {
    background-color: #0600c2ad;
    color: white;
  }

  body {
    color: var(--text);
    height: 100dvh;
    width: auto;
    background-color: var(--background);
  }

  span {
    font-size: 11px;
  }

  h1 {
    font-size: 25px;
    padding: 0;
    text-align: start;
  }

  p {
    font-size: 12px;
    color: #ebe9fcb9;
    animation: show 0.3s ease-in-out;
  }

  @keyframes show {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  button {
    border-bottom: solid 2px var(--primary);
    font-size: 15px;
  }
</style>

